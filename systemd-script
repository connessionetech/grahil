sudo nano /lib/systemd/system/grahil.service


[Unit]
Description=Grahil micro services
After=multi-user.target
[Service]
Type=idle
Restart=on-failure
RestartSec=5s
ExecStart=/home/pi/myenv/bin/python3.7 /home/pi/grahil-py/run.py
[Install]
WantedBy=multi-user.target

SAVE

sudo chmod 644 /lib/systemd/system/grahil.service


sudo systemctl daemon-reload
sudo systemctl enable grahil.service
sudo systemctl start grahil.service
sudo systemctl disable grahil.service