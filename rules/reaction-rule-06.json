{
	"id": "reaction-rule-06",
	"description": "Scheduler rule to copy log file to new location like autobackup at a given time",
	"listen-to": "{time}",
	"enabled": false,
	"trigger": {
		"on-time-object": {
			"recurring": false,
			"using-expression": "0 6 * * mon,wed,fri"
		},
		"evaluator-func": null
	},
	"response": {
		"nonce" : false,
		"action": "copy_file",
		"reaction-func": "standard_reactions.copy_file",
		"reaction-params": {
			"source": "/home/rajdeeprath/red5pro-servers/red5pro-server-us-7.2-recording/log/red5.log",
			"destination": "/home/rajdeeprath/red5pro-server-us-7-2-recording.log",
			"overwrite": true
		}
	}
}
