{
	"id": "reaction-rule-10",
	"description": "Scheduler rule to start log recording at time",
	"listen-to": "{time}",
	"enabled": false,
	"trigger": {
		"on-time-object": {
			"recurring": false,
			"expression": "2020-10-09 04:30:00"
		},
		"evaluator-func": null
	},
	"response":{
		"action": "create_rule",
		"nonce" : true,
		"reaction-func": null,
		"reaction-params": {
			"rule-data":{
					"id": "reaction-dynamic-rule-10",
					"description": "Rule for log recording",
					"listen-to": "/logging/chunked/red5pro-server-us-7-2-recording/log/red5.log",
					"enabled": true,
					"trigger":{
						"on-payload-object": "data",
						"on-content": "*",
						"using-condition": "equals",
						"evaluator-func": null
					},
					"response":{
						"action": "log_record",
						"reaction-func": "standard_reactions.write_log",
						"reaction-params": {
							"filepath": "/home/rajdeeprath/red5-reaction-rule-test-10.log"
						}
					}
			}								
		}
	}	
}
