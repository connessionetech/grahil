{
	"configuration": {
		"base_package": "oneadmin",
		"server": {
			"enabled": true,
			"http_port": 8000,
			"https_port": 8000,
			"bind_host": "127.0.0.1",
			"debug_mode": true,
			"hot_reload": false,
			"api": {
				"enabled": true
			},
			"ws": {
				"enabled": true
			}
		},
		"ssl": {
			"enabled": false,
			"cert_file": "server.crt",
			"private_key": "server.key"
		},
		"modules": {
			"pubsub": {
				"enabled": true,
				"conf": {
					"allow_dynamic_topics": true,
					"topics": [{
							"name": "/ping",
							"type": "push_message",
							"queue_size": 1,
							"max_users": 0
						},
						{
							"name": "/stats",
							"type": "push_message",
							"queue_size": 1,
							"max_users": 0
						},
						{
							"name": "/notification",
							"type": "subscription",
							"queue_size": 10,
							"max_users": 0
						}
					]
				}
			},
			"action_dispatcher": {
				"enabled": true,
				"conf": {}
			}
		}
	}
}